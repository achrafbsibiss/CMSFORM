<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">all the field</h1>
    <%= link_to "New form step", new_template_form_step_field_path(@template, @form_step), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="form_steps" class="min-w-full">
    <% @fields.each do |fields|%>
        <% fields = fields.is_a?(Field) ? [fields] : fields %>
        <%= render partial: "field", locals:{field: fields}  %>
    <% end %>
  </div>
</div>
